@model lab4Final.Models.Prestamo

@{
    ViewData["Title"] = "Detalles del Préstamo";
}

<div class="details-container">
    <div>
        <img src="/images/@Model.ImagenLibro" class="details-image" alt="Imagen del libro" />
    </div>
    <div class="details-info">
        <h1>Detalles del Préstamo</h1>
        <dl>
            <dt>@Html.DisplayNameFor(model => model.FechaPrestamo)</dt>
            <dd>@Model.FechaPrestamo.ToString("dd/MM/yyyy")</dd>

            <dt>@Html.DisplayNameFor(model => model.FechaDevolucion)</dt>
            <dd>@(Model.FechaDevolucion?.ToString("dd/MM/yyyy"))</dd>

            <dt>@Html.DisplayNameFor(model => model.Socio)</dt>
            <dd>@($"{Model.Socio.Nombre} {Model.Socio.Apellido}")</dd>

            <dt>@Html.DisplayNameFor(model => model.Libro)</dt>
            <dd>@Html.DisplayFor(model => model.Libro.Titulo)</dd>
        </dl>

        <div class="edit-link">
            @if (User.IsInRole("Admin"))
            {
                <a asp-action="Edit" asp-route-id="@Model?.Id">Editar</a>
            }
            | <a asp-action="Index">Regresar a la lista</a>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/details.css" />
}